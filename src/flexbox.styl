/*http://gitlab.alibaba-inc.com/alinwmobile/alinwm-css/raw/master/flexbox-test.html*/
// flexbox horizontal && flexbox vertical
.tFBH, .tFBV
    display -webkit-box
    display -webkit-flex
    display flex

// flexbox vertical
.tFBV
    -webkit-box-orient vertical
    -webkit-box-direction normal
    -webkit-flex-direction column
    flex-direction column

// cross axis's align start
.tFBAS
    -webkit-box-align start
    -webkit-align-items flex-start
    align-items flex-start

// cross axis's align center
.tFBAC
    -webkit-box-align center
    -webkit-align-items center
    align-items center

// cross axis's align end
.tFBAE
    -webkit-box-align end
    -webkit-align-items flex-end
    align-items flex-end

// main axis's justify start
.tFBJA
    -webkit-box-pack start
    -webkit-justify-content start
    justify-content start

// main axis's justify center
.tFBJC
    -webkit-box-pack center
    -webkit-justify-content center
    justify-content center

// main axis's justify end
.tFBJE
    -webkit-box-pack end /*待验证 是否要删除*/
    -webkit-justify-content flex-end
    justify-content flex-end

// main axis's justify
.tFBJ
    -webkit-box-pack justify /*待验证 是否要删除*/
    -webkit-justify-content space-between
    justify-content space-between

.tFBH
    >.tFB1, >.tFB2, >.tFB3
        width 0

for n in 1 2 3
    .tFB{n}
        -webkit-box-flex n
        -webkit-flex n
        flex n